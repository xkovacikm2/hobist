<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to '/', id: "logo" do %>
        Hobist
    <% end %>
    <nav>
      <ul class="nav navbar-nav">
        <li>
          <%= link_to 'Home', root_path %>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Categories <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <% Category.find_each do |category| %>
              <li><%= link_to category.name, posts_path(post: {category_id: category.id}) %></li>
            <% end %>
          </ul>
        </li>
        <% if user_signed_in? %>
            <li><%= link_to 'Edit profile', edit_user_registration_path(id: current_user.id) %></li>
            <li class="divider"></li>
            <li><%= link_to 'Logout', destroy_user_session_path, method: "delete" %></li>
        <% else %>
            <li><%= link_to 'Login/Register', new_user_session_path %></li>
        <% end %>
      </ul>

      <ul class="nav navbar-right">
        <li>
          <%= form_tag(root_path, :method => 'get', id: 'search-form') do %>
              <%= text_field_tag :search, params[:search], class: 'search-query', placeholder: 'search', type:
                  'search', data: {} %>
              <%= submit_tag 'S', class: 'btn btn-primary' %>
          <% end %>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Advaced search<b class="caret"></b>
          </a>
          <div class="dropdown-menu">
            <%= render partial: 'posts/post_filter' %>
          </div>
        </li>
      </ul>
    </nav>
  </div>
</header>