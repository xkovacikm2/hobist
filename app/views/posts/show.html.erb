<h1><%= @post.name %></h1>
<div class="row">

  <div class="col-md-6">
    <h3 class="left">Dátum: <%= Date.strptime @post.time.to_s, '%s' %></h3>
    <h3 class="left">Čas: <%= Time.strptime(@post.time.to_s, '%s').strftime '%H:%M' %></h3>
  </div>

  <div class="col-md-6">
    <h3 class="right">
      <% if @post.limited %>
          Limity: <%= @post.users.count %>/<%= @post.limit %>
      <% else %>
          Účastníci: <%= @post.users.count %>
      <% end %>
    </h3>
  </div>

</div>

<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <%= render partial: 'posts/invite_form' %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-3 col-md-offset-4">
    <% unless current_user.nil? %>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">Invite</button>
    <% end %>
    <% if current_user.nil? %>
        <p>prihláste sa pre zúčastnenie <%= link_to 'prihlásiť sa', new_user_session_path, class: 'btn btn-primary' %></p>
    <% elsif @post.users.exclude? current_user %>
        <%= link_to 'Zúčastniť sa', posts_add_attendant_path(id: @post.id), class: 'btn btn-primary', method: :post %>
    <% else %>
        <%= link_to 'Nezúčastniť sa', posts_remove_attendant_path(id: @post.id), class: 'btn btn-primary',
                    method: :delete %>
    <% end %>
    <% if current_user? @post.user_id %>
        <%= link_to 'Upraviť udalosť', edit_post_path(@post), method: :get, class: 'btn btn-primary' %>
        <%= link_to 'Odstrániť udalosť', post_path(@post), method: :delete, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<div class="row">

  <div class="col-md-5">
    <div id="map" class="map"></div>
  </div>

  <div class="col-md-6 col-md-offset-1 row">
    <div class="col-md-12 panel panel-body">
      <%= @post.description %>
    </div>

    <div class="col-md-12 panel panel-body">
      <p>Email tvorcu udalosti: </p>
      <%= mail_to @post.user.email, @post.user.email %>
    </div>
  </div>

</div>

<%= content_tag :div, class: 'locality-content', data: {locality: @post.locality, city: @post.city.name} do %>
<% end %>
<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyABIzzN7SlW5GoZk7xOoBziqObZRw9TzsU&libraries=geometry&callback=initActivityMap", defer: 'defer', async: 'async' %>

