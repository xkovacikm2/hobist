<%= form_for @post_filter, method: :get, url: posts_path do |f| %>

    <%= label :name, 'Event name' %>
    <%= f.text_field :name %>

    <%= label :time, 'Date and time' %>
    <%= f.text_field :time, class: 'datetimepicker' %>

    <%= label :attendants, 'Event attendants' %>
    <%= f.autocomplete_field :attendants, posts_autocomplete_user_name_path, 'data-delimiter' => ',', multiple: true %>


    <%= f.submit 'Search', class: 'btn btn-primary' %>
<% end %>

<%= javascript_tag do %>
  $('.datetimepicker').datetimepicker({
    format : 'DD/MM/YYYY HH:mm'
  });
<% end %>
